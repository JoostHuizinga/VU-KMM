(defrule obtained-observation1
	"If a positive observation is obtained, realize it."
	(observed ?oid TRUE)
	?o <- (observable
		{id == ?oid}
	)
	=>
	(modify ?o
		(observed TRUE)
	)
)
(defrule obtained-observation2
	"If a negative observation is obtained, realize it."
	(observed ?oid FALSE)
	?o <- (observable
		{id == ?oid}
	)
	=>
	(modify ?o
		(observed FALSE)
	)
)
