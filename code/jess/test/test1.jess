(deftemplate component
 	(slot id)
	(slot name)
 	(slot state)
)
(deftemplate state
 	(slot id)
 	(slot name)
)

(deffacts car-facts
 	"Documentation"
	(state
	 	(id working)
		(name "works")
	)
	(state
	 	(id broken)
		(name "broken")
	)
	(component
		(id lamp01)
		(state broken)
	)
	(component
	 	(id draad01)
	)
)

(defrule componet
 	(component
		{id == lamp01}
	)
	?c <- (component
	 	{id == draad01}
	)
	=>
	(modify ?c
		(state broken)
	)
)
